
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i> All Users</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update User</h2>
            <span class="text-light">Use the below form to Update an entry</span>
        </div>

        <!-- add user form -->
         <!-- form handling -->
 <form method="POST" id="update_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Username</label>
            <input type="hidden" name="id" value="<%= user._id %>">
            <input type="text" name="name" value="<%= user.name %>" placeholder="">
        </div>
        <div class="form-group">
            <label for="subject" class="text-light">Subject</label>
            <input type="text" name="subject" value="<%= user.subject%>" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label for="property" class="text-light">Property</label>
            <input type="text" name="property" value="<%= user.property%>" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label for="value" class="text-light">Concept/Value</label>
            <input type="text" name="value" value="<%= user.value%>" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label for="gender" class="text-light">Voting</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="gender" value="Positive" <%= user.gender == 'Positive' ? 'checked' : '' %>>
                <label for="radio-2" class="radio-label">Positive</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="gender" value="Negative"  <%= user.gender == 'Negative' ? 'checked' : '' %> >
                <label for="radio-3" class="radio-label">Negative</label>
            </div>
        </div>

        <div class="form-group">
            <label for="gender" class="text-light">Priority</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="status" value="High" <%= user.status == 'High Priority' ? 'checked' : '' %> >
                <label for="radio-4" class="radio-label">High Priority</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="status" value="Low" <%= user.status == 'Low Priority' ? 'checked' : '' %> >
                <label for="radio-5" class="radio-label">Low Priority</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Update Entry</button>
        </div>

    </div>
</form>
       
    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
